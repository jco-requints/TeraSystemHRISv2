<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_gray">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".LeavesFragment">

        <ScrollView
                android:id="@+id/activity_profile_scrollview"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintBottom_toTopOf="@+id/leavesRecyclerView">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/remainingLeavesTitle"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
                        android:layout_marginRight="24dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/remaining_leaves_title" android:layout_marginTop="16dp"
                        android:textSize="18sp" android:layout_marginBottom="3dp"
                        app:layout_constraintBottom_toTopOf="@+id/vacationLeaveTitle"/>
                <TextView
                        android:text="@string/vacation_leave_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/vacationLeaveTitle"
                        app:layout_constraintTop_toBottomOf="@+id/remainingLeavesTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/vacationLeave"
                        android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
                        android:layout_marginTop="16dp"
                        android:textSize="18sp"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/vacationLeave"
                        app:layout_constraintStart_toEndOf="@+id/vacationLeaveTitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="64dp"
                        android:layout_marginRight="64dp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/vacationLeaveTitle"
                        app:layout_constraintHorizontal_bias="0.0"
                        tools:text="7"
                        android:textAlignment="textEnd"
                        android:textSize="18sp" android:layout_gravity="end"/>
                <TextView
                        android:text="@string/sick_leave_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/sickLeaveTitle"
                        app:layout_constraintTop_toBottomOf="@+id/vacationLeaveTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/sickLeave"
                        android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
                        android:layout_marginTop="16dp"
                        android:textSize="18sp"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/sickLeave"
                        app:layout_constraintStart_toEndOf="@+id/sickLeaveTitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="64dp"
                        android:layout_marginRight="64dp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/sickLeaveTitle"
                        app:layout_constraintHorizontal_bias="0.0"
                        tools:text="12.5"
                        android:textAlignment="textEnd"
                        android:textSize="18sp" android:layout_gravity="end"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/usedLeavesTitle"
                        android:text="@string/used_leaves_title"
                        android:textSize="18sp" android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@+id/sickLeaveTitle" android:layout_marginEnd="24dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp"
                        android:layout_marginStart="24dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="24dp"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/leaveDate"
                        android:text="@string/leave_date_title" android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
                        android:layout_marginStart="24dp" android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@+id/usedLeavesTitle"
                        app:layout_constraintEnd_toStartOf="@+id/numberOfDays"
                        app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/numberOfDays"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
                        app:layout_constraintStart_toEndOf="@+id/leaveDate"
                        android:textAlignment="textEnd"
                        app:layout_constraintBaseline_toBaselineOf="@+id/leaveDate" android:textSize="18sp"
                        android:text="@string/no_of_days" android:layout_gravity="end"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/leavesRecyclerView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scrollbars="vertical" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/activity_profile_scrollview"
                app:layout_constraintVertical_bias="0.0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>